<% if @team.nil? %>
  <% provide :title, "Overall Scrum Board" %>
<% else %>
  <% provide :title, "#{@team.capitalize} Scrum Board" %>
<% end %>
<%= react_component 'SprintGoal', { team: @team, project_id: @project_id, settings: @settings } %>
<%= react_component 'Board', { team: @team, project_id: @project_id, backlog: @current, settings: @settings }, class: "board" %>